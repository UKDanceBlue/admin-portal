{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx"
  },
  "compileOnSave": true,
  "include": [
    "./src", "./.eslintrc.cjs"
  ]
}
