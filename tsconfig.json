{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "incremental": true
  },
  "references": [
    {
      "path": "./modules/hosting"
    },
    {
      "path": "./modules/functions"
    }
  ],
  "explainFiles": true
}
